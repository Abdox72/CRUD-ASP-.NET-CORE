@model List<Product>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container my-5">
        <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle text-center bg-white shadow">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Product ID</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                        <th scope="col">Image</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ID</td>
                            <td>@product.Title</td>
                            <td>$@product.Price</td>
                            <td>
                                @if (product.Image != null)
                                {
                                    <img src="@product.Image" alt="@product.Title" class="img-thumbnail" style="width: 100px; height: 100px;" />
                                }
                                else
                                {
                                    <span class="text-muted">No Image</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Product", new { id = product.ID })" class="btn btn-sm btn-warning me-1">Edit</a>
                                <a href="@Url.Action("Delete", "Product", new { id = product.ID })" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5" class="text-end">
                            <a href="/Product/Create" class="btn btn-success">Create New Product</a>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
