@model List<Product>
    <div class="container my-5">
        <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

        <div class="card shadow p-4">
                @using (Html.BeginForm(FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="mb-3">
                        @Html.Label("ID" , "ID" , htmlAttributes: new { @class = "form-label" })
                        @Html.TextBox("ID", null, new { @class = "form-control", placeholder = "Enter product title" , type="number" })
                    </div>
                    <div class="mb-3">
                        @Html.Label("Title" , "Title" , htmlAttributes: new { @class = "form-label" })
                        @Html.TextBox("Title", null, new { @class = "form-control", placeholder = "Enter product title" })
                    </div>

                    <div class="mb-3">
                        @Html.Label("Description", "Description", htmlAttributes: new { @class = "form-label" })
                        @Html.TextBox("Description", null, new { @class = "form-control", placeholder = "Enter product description" })
                    </div>

                    <div class="mb-3">
                        @Html.Label("Price", "Price", htmlAttributes: new { @class = "form-label" })
                        @Html.Raw("<input type='number' name='Price' step='0.1' class='form-control' placeholder='Enter product price' />")
                    </div>

                    <div class="mb-3">
                        @Html.Label("Image", "Image", htmlAttributes: new { @class = "form-label" })
                        <input type="file" name="Image" class="form-control" />
                    </div>

                    <div class="text-end">
                        <input type="submit" value="Create Product" class="btn btn-success" />
                    </div>
                }
        </div>
    </div>
