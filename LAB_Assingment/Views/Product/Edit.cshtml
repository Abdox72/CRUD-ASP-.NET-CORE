@model Product
    <div class="container my-5">
        <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

        <div class="card shadow p-4">
                @using (Html.BeginForm(FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="mb-3">
                        @Html.Label("Title", "Title", htmlAttributes: new { @class = "form-label" })
                        @Html.TextBox("Title", Model.Title, new { @class = "form-control", placeholder = "Enter product title" })
                    </div>

                    <div class="mb-3">
                        @Html.Label("Description", "Description", htmlAttributes: new { @class = "form-label" })
                        @Html.TextBox("Description", Model.Description, new { @class = "form-control", placeholder = "Enter product description" })
                    </div>

                    <div class="mb-3">
                        @Html.Label("Price", "Price", htmlAttributes: new { @class = "form-label" })
                        @* <input type="number" name="Price" value="@Model.Price.ToString("0.##")" step="0.01" class="form-control" placeholder="Enter price" /> *@
                        @Html.Raw($"<input type='number' name='Price' step='0.1' value='{@Model.Price.ToString("0.##")}' class='form-control' placeholder='Enter product price' />")
                    </div>

                    <div class="mb-3">
                        @Html.Label("Image", "Image", htmlAttributes: new { @class = "form-label" })
                        <input type="file" name="Image" class="form-control" />
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <div class="mt-2">
                                <img src="@Model.Image" alt="Product Image" class="img-thumbnail" style="width: 120px; height: 120px;" />
                            </div>
                        }
                    </div>

                    <div class="text-end">
                        <input type="submit" value="Update Product" class="btn btn-primary" />
                    </div>
                }
        </div>
    </div>
